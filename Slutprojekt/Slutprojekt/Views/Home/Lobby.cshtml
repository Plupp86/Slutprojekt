@model LobbyVM
<div class="content">
    <div style="padding:25px" id="mainDiv">
        <form class="form-horizontal">
            <div id="divPreviewImage">
                <fieldset>
                    <div class="form-group">
                        <div class="col-lg-2">
                            <image src="Images/granny.png" id="previewImage" style="height:100px;width:100px;border:solid 2px dotted; float:left" />
                        </div>
                        <div class="col-lg-10" id="divOpponentPlayer">
                            <image src="" id="opponentImage" style="height:100px;width:100px;border:solid 2px dotted; float:right;" />
                        </div>
                    </div>
                </fieldset>
            </div>
            <div id="divRegister">
                <h3>Connecting .... </h3>
            </div>
            <div id="divFindOpponentPlayer">
                <fieldset>
                    <h3>Tic-Tac-Toe</h3>
                    <div class="form-group">
                        <span style="margin:50px"><input type="button" class="btn btn-block findPlayerBtn" id="btnFindOpponentPlayer" value="Find Opponent Player" /></span>
                        @*<span style="margin:50px"><input type="button" class="btn btn-block findPlayerBtn" id="btnFindOpponentPlayerMemory" value="Find Opponent Player Memory" /></span>*@
                    </div>
                </fieldset>
            </div>
            <div id="divFindingOpponentPlayer">
                <fieldset>
                    <legend>Its lonely here!</legend>
                    <div class="form-group">
                        Looking for an opponent player. Waiting for someone to join!
                    </div>
                </fieldset>
            </div>
            <div id="divGameInformation" class="form-group">
                <div class="form-group" id="divGameInfo"></div>
                <div class="form-group" id="divInfo"></div>
            </div>
            <div id="divGame" style="clear:both">
                <fieldset>
                    <div id="divGameBoard" style="width:190px">
                        <div id="divGameBoardMemory" style="width:190px">
                        </div>
                     </div>
                </fieldset>
            </div>
        </form>
    </div>

    <div id="playerList">
        <strong>List of players:</strong>
        <div id="onlineUsers">onlineplayers div</div>
    </div>
    <div class="clear-fix"></div>
    <br />
    <div id="chatDiv">
        <div class="form-group">
            <textarea id="txtChat" readonly></textarea>
        </div>
		<div id="chatMessDiv">
			<input type="text" id="txtMessage">
		</div>
		<div id="chatBtnDiv">	
		<button type="submit" class="btn" id="btnSend">Submit</button>
		</div>
		<div class="clear-fix"></div>
	</div>
</div>


<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/signalr-client-1.0.0-alpha2-final.js"></script>
<script>
	var userName = '@Model.UserName.ToString()';
	var gameName = '@Model.GameName.ToString()';
</script>

<script src="~/js/TicTacToe.js"></script>
<script src="~/js/ChatScript-1.1.js"></script>
